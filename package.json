{
  "name": "eventfan",
  "version": "1.0.0",
  "description": "Send tracking/analytics events to multiple destinations (Google Analytics, Facebook...).",
  "repository": "https://github.com/alan-cooney/eventfan.git",
  "author": "Alan Cooney <alan@skyhookadventure.com>",
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc && node ./esbuild.js",
    "bump": "./node_modules/.bin/versiony package.json --patch",
    "coverage": "./node_modules/.bin/jest --collect-coverage",
    "dev": "yarn vite --config ./src/e2e/react/vite.config.js",
    "lint": "./node_modules/.bin/eslint . --ext .ts,.tsx --ignore-path .gitignore",
    "playwright": "playwright test --config=src/e2e/playwright.config.ts",
    "react": "yarn vite --config ./src/e2e/react/vite.config.js",
    "test": "./node_modules/.bin/jest",
    "vanilla": "yarn ts-node ./src/e2e/vanilla/server.ts"
  },
  "main": "dist/node/index.js",
  "devDependencies": {
    "@playwright/test": "^1.16.3",
    "@swc/core": "^1.2.111",
    "@swc/jest": "^0.2.5",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.8",
    "@types/react": "^17.0.35",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vitejs/plugin-react": "^1.0.9",
    "change-case": "^4.1.2",
    "cross-fetch": "^3.1.4",
    "esbuild": "^0.13.14",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-jest-dom": "^3.9.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^5.0.0",
    "fs-extra": "^10.0.0",
    "glob": "^7.2.0",
    "hygen": "^6.1.0",
    "jest": "^27.3.1",
    "live-server": "^1.2.1",
    "playwright": "^1.16.3",
    "postal-address-field-names": "^1.0.3",
    "prettier": "^2.4.1",
    "quicktype-core": "^6.0.70",
    "react": "^17.0.2",
    "react-bootstrap": "^2.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.0.2",
    "react-scripts": "^4.0.3",
    "recursive-readdir-sync": "^1.0.6",
    "tiny-glob": "^0.2.9",
    "ts-node": "^10.4.0",
    "typescript": "~4.5.2",
    "versiony-cli": "^1.3.0",
    "vite": "^2.6.14"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "extensionsToTreatAsEsm": [
      ".ts",
      ".tsx"
    ],
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/*unit.test.ts",
      "**/*unit.test.tsx",
      "**/*int.test.ts",
      "**/*int.test.tsx"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest",
        {
          "sourceMaps": true
        }
      ]
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ]
    ]
  },
  "private": true,
  "sideEffects": false,
  "dependencies": {
    "posthog-js": "^1.16.6"
  }
}

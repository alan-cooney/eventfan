{
  "name": "eventfan",
  "version": "1.0.0",
  "description": "Send tracking/analytics events to multiple destinations (Google Analytics, Facebook...).",
  "repository": "https://github.com/alan-cooney/eventfan.git",
  "author": "Alan Cooney <alan@skyhookadventure.com>",
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc",
    "dev": "SKIP_PREFLIGHT_CHECK=true ENTRY=/e2e/react react-scripts start",
    "buildBrowser": "ts-node ./src/esbuild.ts",
    "test": "./node_modules/.bin/jest",
    "coverage": "./node_modules/.bin/jest --collect-coverage",
    "lint": "./node_modules/.bin/eslint . --ext .ts,.tsx --ignore-path .gitignore",
    "bump": "./node_modules/.bin/versiony package.json --patch",
    "playwright": "playwright test .spec.test.ts",
    "react": "vite --root ~/repos/eventfan/src/e2e/react"
  },
  "main": "dist/index.js",
  "devDependencies": {
    "@playwright/test": "^1.16.3",
    "@testing-library/dom": "^8.11.1",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.7",
    "@types/react": "^17.0.35",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vitejs/plugin-react": "^1.0.9",
    "change-case": "^4.1.2",
    "esbuild": "^0.13.14",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "fs-extra": "^10.0.0",
    "jest": "^27.3.1",
    "live-server": "^1.2.1",
    "playwright": "^1.16.3",
    "postal-address-field-names": "^1.0.3",
    "prettier": "^2.4.1",
    "quicktype-core": "^6.0.70",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^4.0.3",
    "recursive-readdir-sync": "^1.0.6",
    "ts-node": "^10.4.0",
    "typescript": "~4.4.4",
    "versiony-cli": "^1.3.0",
    "vite": "^2.6.14"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/*unit.test.ts",
      "**/*int.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "esbuild-jest",
        {
          "sourcemap": true
        }
      ]
    }
  },
  "private": true,
  "sideEffects": false,
  "dependencies": {
    "posthog-js": "^1.16.4"
  }
}

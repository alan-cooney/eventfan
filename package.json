{
  "name": "eventfan",
  "version": "1.0.0",
  "description": "Send tracking/analytics events to multiple destinations (Google Analytics, Facebook, Rudderstack...)Send tracking/analytics events to multiple destinations (Google Analytics, Facebook, Rudderstack...)",
  "repository": "https://github.com/alan-cooney/eventfan.git",
  "author": "Alan Cooney <alan@skyhookadventure.com>",
  "license": "UNLICENSED",
  "scripts": {
    "build": "node ./esbuild.js",
    "watch": "tsc -w --resolveJsonModule",
    "test": "./node_modules/.bin/jest",
    "coverage": "./node_modules/.bin/jest --collect-coverage",
    "lint": "./node_modules/.bin/eslint . --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore",
    "bump": "./node_modules/.bin/versiony package.json --patch",
    "codegen": "ts-node ./src/sourceTypes/codegen.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.13.1",
    "@testing-library/dom": "^8.1.0",
    "@types/jest": "^27.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "change-case": "^4.1.2",
    "esbuild": "^0.12.19",
    "esbuild-jest": "^0.5.0",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.2",
    "glob": "^7.2.0",
    "jest": "^27.0.6",
    "playwright": "^1.13.1",
    "postal-address-field-names": "^1.0.3",
    "prettier": "^2.0.4",
    "quicktype-core": "^6.0.70",
    "recursive-readdir-sync": "^1.0.6",
    "ts-node": "^10.2.0",
    "typescript": "~4.3.5",
    "versiony-cli": "^1.3.0"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "esbuild-jest",
        {
          "sourcemap": true
        }
      ]
    }
  },
  "private": true,
  "sideEffects": false
}

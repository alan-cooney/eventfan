{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es2018", "dom"],
    "module": "ES6",
    "noImplicitAny": false,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": [".eslintrc.js", "./src/**/*"]
}
